<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM.Views.DBFriendPage"
             Title="DBFriendPage">
    <StackLayout>
        <Label Text="Nimi" x:Name="nimii"/>
        <Entry Text="{Binding Name}"/>
        <Label Text="Email"/>
        <Entry Text="{Binding Email}" Keyboard="Email"/>
        <Label Text="Telefon"/>
        <Entry Text="{Binding Phone}" Keyboard="Telephone"/>
        <Label Text="Vanus"/>
        <Entry Text="{Binding Age}" Keyboard="Numeric"/>
        <Label Text="Pilt"/>
        <Label Text="{Binding Img}" IsVisible = "False"/>
        <Image x:Name="pilt"/>
        <Button Text="Vali pilt" Clicked="Button_Clicked"/>
        <HorizontalStackLayout>
            <Button Text="Salvesta" Clicked="SaveFriend" WidthRequest="130" TextColor="White"/>
            <Button Text="Kustuta" Clicked="DeleteFriend" WidthRequest="130" TextColor="White"/>
            <Button Text="TÃ¼hista" Clicked="Cancel" WidthRequest="130" TextColor="White"/>
        </HorizontalStackLayout>
    </StackLayout>
</ContentPage>