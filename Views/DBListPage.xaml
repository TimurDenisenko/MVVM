<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM.Views.DBListPage"
             Title="DBListPage">
    <StackLayout>
        <HorizontalStackLayout HorizontalOptions="Center">
            <Button Text="Nimi" Clicked="SortName" WidthRequest="100" TextColor="White"/>
            <Button Text="Email" Clicked="SortEmail" WidthRequest="100" TextColor="White"/>
            <Button Text="Telefon" Clicked="SortPhone" WidthRequest="100" TextColor="White"/>
            <Button Text="Age" Clicked="SortAge" WidthRequest="100" TextColor="White"/>
        </HorizontalStackLayout>
        <ListView x:Name="friendsList" ItemsSource="{Binding}" ItemSelected="OnItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <HorizontalStackLayout>
                                <Label Text="{Binding Name}" FontSize="Medium"></Label>
                            </HorizontalStackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Lisa" Clicked="CreateFriend" TextColor="White"/>
    </StackLayout>
</ContentPage>